# Bot Token from @BotFather
BOT_TOKEN=

# Channel ID where posts will be published (use negative number with -100 prefix for channels)
# Example: -1001234567890
CHANNEL_ID=

# Moderator Group ID where posts will be sent for approval
# Example: -1001234567890
MODERATOR_GROUP_ID=

# Required Join Channel ID (users must join this channel to use the bot)
# This channel should have join requests enabled
# Example: -1001234567890
REQUIRED_JOIN_CHANNEL=

# Admin User IDs (comma-separated list of admin Telegram user IDs)
# These users can approve/reject posts
# Example: 123456789,987654321,456789123
ADMINS_ID=
